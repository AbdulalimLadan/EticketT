<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/loginLayout"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="208dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="120dp"
            android:text="HEllO!"
            android:fontFamily="@font/lucida"
            android:textColor="@color/Pink"
            android:textSize="38sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="170dp"
            android:text="Sign in to your Account"
            android:fontFamily="@font/lucida"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/lucida"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginHorizontal="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Emailforlogin"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucida"
            android:text="Password"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:inputType="textPassword"
            android:id="@+id/passwordForLogin"
            android:layout_marginVertical="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:clickable="true"
            android:id="@+id/toForgot"
            android:fontFamily="@font/lucida"
            android:textColor="@color/Pink"
            android:layout_marginHorizontal="265dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:id="@+id/lRemember"
            android:fontFamily="@font/lucida"
            android:textColor="#000"
            android:layout_marginHorizontal="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/lucida"
            android:textColor="#fff"
            android:id="@+id/ButtonLogin"
            android:background="@drawable/btbg"
            android:layout_marginHorizontal="310dp"
            />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar1"
            android:layout_marginHorizontal="180dp"
            android:visibility="invisible"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="107dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:fontFamily="@font/lucida"
            android:textColor="#000"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="140dp"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Pink"
            android:text="Sign up here"
            android:id="@+id/toSignup"
            android:clickable="true"
            android:fontFamily="@font/lucida"
            android:layout_marginLeft="249dp"
            android:textSize="16dp"/>

    </RelativeLayout>
</LinearLayout>
