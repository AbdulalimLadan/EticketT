<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/Pink"
        android:id="@+id/relative2"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_marginTop="15dp"
            android:id="@+id/bacckk"
            android:layout_marginHorizontal="10dp"
            android:tint="#fff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Result"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fromResult"
            android:text="from"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="90dp"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/lucida"
            android:textColor="#fff"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bacckk"
            android:layout_marginTop="20dp"
            android:src="@drawable/line"
            android:id="@+id/lines"
            android:layout_marginHorizontal="120dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toResult"
            android:text="to"
            android:layout_marginHorizontal="305dp"
            android:layout_marginTop="90dp"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/lucida"
            android:textColor="#fff"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person_outline_black_24dp"
            android:tint="#fff"
            android:layout_below="@id/toResult"
            android:layout_marginHorizontal="320dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/personresult"
            android:text="1"
            android:layout_marginHorizontal="365dp"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:layout_below="@id/lines"
            android:textStyle="bold"
            android:fontFamily="@font/lucida"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/theclass"
            android:text="Business Class"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textColor="#fff"
            android:fontFamily="@font/lucida"
            android:gravity="center"
            android:layout_below="@id/lines"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DateResult"
            android:text="1/22/2019"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:layout_below="@id/lines"
            android:textStyle="bold"
            android:fontFamily="@font/lucida"
            android:textColor="#fff"
            />

    </RelativeLayout>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recycle"/>
</LinearLayout>