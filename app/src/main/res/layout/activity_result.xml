<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/Pink"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_marginTop="15dp"
            android:id="@+id/back"
            android:layout_marginHorizontal="10dp"
            android:tint="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Result"
            android:textSize="24dp"
            android:layout_marginHorizontal="120dp"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fromResult"
            android:text="from"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="90dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/lucida"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toesult"
            android:text="to"
            android:layout_marginHorizontal="300dp"
            android:layout_marginTop="90dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/lucida"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DateResult"
            android:text="1/22/2019"
            android:layout_marginHorizontal="130dp"
            android:layout_marginTop="25dp"
            android:textSize="25dp"
            android:layout_below="@id/fromResult"
            android:textStyle="bold"
            android:fontFamily="@font/lucida"
            android:textColor="#fff"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="140dp"
           android:background="#fff"
           android:layout_marginHorizontal="10dp"
           android:layout_marginVertical="10dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/price"
               android:text="N6,000"
               android:textSize="25dp"
               android:textStyle="bold"
               android:layout_marginTop="5dp"
               android:textColor="@color/Pink"
               android:fontFamily="@font/lucida"
               android:layout_marginHorizontal="285dp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Departure"
               android:layout_below="@+id/price"
               android:layout_marginHorizontal="20dp"
               android:layout_marginTop="15dp"
               android:textSize="15dp"
               android:id="@+id/depText"
               android:textStyle="bold"
               android:textAllCaps="true"
               android:fontFamily="@font/lucida"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="12:00am"
               android:layout_below="@+id/depText"
               android:layout_marginHorizontal="0dp"
               android:layout_marginTop="7dp"
               android:textSize="25dp"
               android:textStyle="bold"
               android:textAllCaps="true"
               android:textColor="@color/Pink"
               android:id="@+id/TimeDeparture"
               android:fontFamily="@font/lucida"
               />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/depText"
               android:src="@drawable/train"
               android:layout_marginHorizontal="190dp"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Arrival"
               android:layout_below="@+id/price"
               android:layout_marginHorizontal="290dp"
               android:layout_marginTop="15dp"
               android:textSize="15dp"
               android:id="@+id/ArrText"
               android:textStyle="bold"
               android:textAllCaps="true"
               android:fontFamily="@font/lucida"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2:00am"
               android:layout_below="@+id/depText"
               android:layout_marginHorizontal="280dp"
               android:layout_marginTop="7dp"
               android:textSize="25dp"
               android:textStyle="bold"
               android:textAllCaps="true"
               android:textColor="@color/Pink"
               android:id="@+id/TimeArrival"
               android:fontFamily="@font/lucida"
               />

       </RelativeLayout>

    </RelativeLayout>
</LinearLayout>