<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginEnd="9dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="9dp"
        android:layout_marginVertical="10dp"
        android:background="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/depText"
            android:layout_marginHorizontal="190dp"
            android:src="@drawable/train" />

        <TextView
            android:id="@+id/prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="285dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lucida"
            android:text="N6,000"
            android:textColor="@color/Pink"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/depText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prices"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lucida"
            android:text="Departure"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TimeDeparture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/depText"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/lucida"
            android:text="12:00am"
            android:textAllCaps="true"
            android:textColor="@color/Pink"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theclassdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lucida"
            android:text="Business Class"
            android:textColor="@color/Pink"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ArrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prices"
            android:layout_marginHorizontal="290dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lucida"
            android:text="Arrival"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TimeArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/depText"
            android:layout_marginHorizontal="280dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/lucida"
            android:text="2:00am"
            android:textAllCaps="true"
            android:textColor="@color/Pink"
            android:textSize="25dp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>